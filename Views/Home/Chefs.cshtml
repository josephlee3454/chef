@using chefndish.Models
@model Chef  
  
  <form asp-action="newchef" asp-controller="Home" method="POST">


  <div class="col">
    <label asp-for="FirstName" class="visually-hidden" for="inlineFormSelectPref">First Name</label>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="First name" aria-label="First name">
    <span asp-validation-for="FirstName"></span>
  </div>
  <div class="col">
    <label asp-for="LastName" class="visually-hidden" for="inlineFormSelectPref">Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name" aria-label="Last name">
    <span asp-validation-for="LastName"></span>
  </div>
  <div class="col">
    <label asp-for="Birthday" class="visually-hidden" for="inlineFormSelectPref">Birthday</label>
    <input type="date" class="form-control" asp-for="Birthday" placeholder="D.O.B" aria-label="Birthday">
    <span asp-validation-for="Birthday"></span>
  </div>
    <div class="form-group">
            <button type="submit">Add New Chef!</button>
    </div>

  </form>
  